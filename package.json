{
  "name": "petbot",
  "version": "8.1.0",
  "description": "",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && cd apps/web && npm run build",
    "test": "vitest --run",
    "test:ci": "vitest --run --silent",
    "test:watch": "vitest",
    "dev": "tsc && node dist/src/deploy-commands.js && node dist/src/index.js",
    "dev:web": "cd apps/web && npm run dev",
    "build:web": "cd apps/web && npm run build",
    "start:web": "cd apps/web && npm run start",
    "start": "node dist/src/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "tag": "git tag v$(node -p \"require('./package.json').version\") && git push origin v$(node -p \"require('./package.json').version\")",
    "release": "npm run build && npm run test && npm run tag",
    "bearer:scan": "bearer scan . --severity critical,high,medium"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "discord.js": "^14.21.0",
    "dotenv": "^16.1.4",
    "pino": "^10.1.0",
    "pino-pretty": "^11.3.0",
    "prettier": "^3.7.4",
    "react": "^19.2.3",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "node-fetch": "^3.3.1",
    "umzug": "^3.8.2"
  },
  "devDependencies": {
    "@types/node": "^25.0.2",
    "@types/node-fetch": "^2.6.13",
    "@types/react": "^19.2.7",
    "eslint": "^9.33.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.0.5",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "tar": "7.5.7",
    "undici": "6.23.0"
  }
}
